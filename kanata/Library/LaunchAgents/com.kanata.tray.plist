<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple Computer//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>com.kanata.tray</string>
    <key>ProgramArguments</key>
    <array>
      <!-- sudo visudo; -->
      <!-- rti ALL=(ALL) NOPASSWD: /Users/rti/.local/bin/kanata-tray-macos -->
      <string>/usr/bin/sudo</string>
      <string>/Users/rti/.local/bin/kanata-tray-macos</string>
    </array>
    <key>RunAtLoad</key>
    <true/>
    <key>StartInterval</key>
    <integer>60</integer> <!-- Optional: Repeat every 60 seconds -->
    <key>StandardErrorPath</key>
    <string>/tmp/kanata-tray.stderr</string>  <!-- Optional: for debugging -->
    <key>StandardOutPath</key>
    <string>/tmp/kanata-tray.stdout</string>  <!-- Optional: for debugging -->
  </dict>
</plist>

